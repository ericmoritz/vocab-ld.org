#!/usr/bin/env python
import sys
import rdflib
from rdflib.util import guess_format
import urllib

for filename in sys.argv[1:]:
    g = rdflib.Graph()
    try:
        g.parse(
            location=urllib.pathname2url(filename),
            format=guess_format(filename)
        )
    except Exception, err:
        print("Error parsing {filename}".format(**locals()))
        print(str(err))
        sys.exit(-1)
